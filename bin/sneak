#!/usr/bin/env node
var ArgumentParser = require('argparse').ArgumentParser
  , args
  , pkg = require('../package.json')
  , Sneak = require('../')
  , parser = new ArgumentParser ( {
    version: pkg.version,
    addHelp: true,
    description: pkg.description
  })

arguments = parser.parseArgs(process.argv.slice(3));
console.log(Sneak.renderFile(process.argv[2], arguments));
