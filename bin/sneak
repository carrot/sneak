#!/usr/bin/env node
require('colors');

var Sneak = require('..')
  , args = process.argv.slice(2)
  , cmd = args[0]
  , path = require('path');

switch (cmd) {
case "render":
  Sneak.renderFile(path.join(process.cwd(), args[1]), 'utf8',
    function (err, response){
      if (err) {
        console.error(err);
      } else {
        console.log(response);
      }
    }
  )
}
